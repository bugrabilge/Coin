@using EntityLayer.Concrete
@model ObjectRecycle
@{
    ViewData["Title"] = "ChangeRecycleObjectCarbonValue";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>ChangeRecycleObjectCarbonValue</h1>

@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>@Model.ObjectName adlı objenin yeni Carbon değerini giriniz</h4>
        <hr />
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.ObjectID, new { htmmlAttributes = new{ @class = "control-label col-md-2"}})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ObjectID, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"} })
                @Html.ValidationMessageFor(model => model.ObjectID, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObjectName, new { htmmlAttributes = new{ @class = "control-label col-md-2"}})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ObjectName, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"} })
                @Html.ValidationMessageFor(model => model.ObjectName, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObjectQuantity, new { htmmlAttributes = new{ @class = "control-label col-md-2"}})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ObjectQuantity, new {htmlAttributes = new {@class = "form-control", @readonly = "readonly"} })
                @Html.ValidationMessageFor(model => model.ObjectQuantity, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ObjectCarbonPoint, new { htmmlAttributes = new{ @class = "control-label col-md-2"}})
            <div class="col-md-10">
                @Html.EditorFor(model => model.ObjectCarbonPoint, new {htmlAttributes = new {@class = "form-control"} })
                @Html.ValidationMessageFor(model => model.ObjectCarbonPoint, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Change" class="btn btn-outline-secondary" />
            </div>
        </div>
    </div>
}