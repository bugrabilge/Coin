@model EntityLayer.Concrete.Users
@{
    ViewData["Title"] = "Convert";
    Layout = "~/Views/Shared/_LayoutLogined.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <link href="~/css/IDCard.css" type="text/css" rel="stylesheet" />
    <style>
        .recent-orders {
            margin: 5px;
            border-radius: 30px;
        }

        button.recent-orders {
            background: 20px;
            border-style: solid;
            border: 24px;
            border-color: darkred
        }
    </style>
</head>
<body>
    <div style="margin: 0px; padding: 0px;">
        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <h1 style="margin-top:50px;" class="services_taital">RC Coin Alış & Satış</h1>
                    <form method="post">
                        <div style="margin-bottom:150px;" class="container d-flex justify-content-center mt-5">

                            <div style="margin-top:25px;" class="card">

                                <div class="top-container">

                                    <img src="/Login/images/user 01.png" class="img-fluid profile-image" width="70">

                                    <div class="ml-3">
                                        <p class="namemail">@ViewBag.Name @ViewBag.Surname</p>
                                        <h5 class="name">@ViewBag.UserName</h5>
                                        <p class="mail">@ViewBag.Mail</p>

                                    </div>
                                </div>


                                <div class="middle-container d-flex justify-content-between align-items-center mt-3 p-2">
                                    <div class="dollar-div px-3">

                                        <div class="round-div"><i class="fa fa-dollar dollar"></i></div>

                                    </div>
                                    <div class="d-flex flex-column text-right mr-2">
                                        <span class="current-balance">Current Balance</span>
                                        <span class="amount"><span class="dollar-sign">$</span>@ViewBag.RecycleCoin RC</span>
                                    </div>

                                </div>

                                <div class="fashion-studio-border pt-2">
                                    <span class="fashion-studio">Hesabımdaki Carbon = @ViewBag.Carbon</span>
                                </div>
                                <div class="wishlist-border pt-2">
                                    <span class="wishlist">1 Recycle Coin (RC) = 100.000.000 Carbon (C)</span>
                                </div>
                                <section>
                                    <label class="recent-orders">@ViewBag.Coin</label>
                                    <label class="recent-orders">@ViewBag.YetersizBakiye</label>
                                    <br />
                                    <div>
                                        <button style="height:60px; width:100px; background-color: #FF5A58; border:0px; border-radius:20px;" formmethod="post" type="submit" class="recent-orders">
                                            <p style="color:white; font-family:Corbel; font-size:large; margin:0px;"><b>DÖNÜŞTÜR</b></p>
                                        </button>
                                    </div>
                                </section>
                            </div>

                        </div>
                    </form>
                    <br />
                    <br />
                </div>
                <div class="col-md-4">
                    <div><img style="margin-top:100px;" src="~/Login/images/recycling-arrows-with-money-coin-vector-26604129_conv-removebg-preview.png" class="image_1"></div>
                </div>
            </div>
        </div>
    </div>

</body>
</html>

